<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/icons"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    app:contentPaddingBottom="16dp"
    app:contentPaddingLeft="12dp"
    app:contentPaddingRight="12dp"
    app:contentPaddingTop="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/row_jadwal_instansi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:lines="1"
            android:text="UTD PMI Kabupaten Bandung PT ISS"
            android:textColor="@color/primary_text"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_jadwal_alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_jadwal_instansi"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:lines="1"
            android:text="JL RAYA NAROGONG CILEUNGSI"
            android:textColor="@color/primary_text"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/row_img_time"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/row_jadwal_alamat"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_time" />

        <TextView
            android:id="@+id/row_jadwal_waktu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_jadwal_alamat"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/row_img_time"
            android:fontFamily="sans-serif"
            android:lines="1"
            android:text="09:00"
            android:textColor="@color/primary_text"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/row_img_people"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_below="@id/row_jadwal_alamat"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/row_jadwal_waktu"
            android:src="@drawable/ic_audience" />

        <TextView
            android:id="@+id/row_jadwal_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row_jadwal_alamat"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="13dp"
            android:layout_toRightOf="@id/row_img_people"
            android:fontFamily="sans-serif"
            android:lines="1"
            android:text="50 Kantong"
            android:textColor="@color/primary_text"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/row_jadwal_share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/row_img_time"
            android:src="@drawable/ic_share"
            android:textColor="@color/icons"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/row_jadwal_bookmark"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@id/row_jadwal_share"
            android:layout_below="@id/row_img_time"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_event"
            android:textColor="@color/icons"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.v7.widget.CardView>